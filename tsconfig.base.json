{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "paths": {
      "@appcraft/craftsman": ["libs/craftsman/src/index.ts"],
      "@appcraft/exhibitor": ["libs/exhibitor/src/index.ts"],
      "@appcraft/server": ["libs/server/src/index.ts"],
      "@appcraft/themes": ["libs/themes/src/index.ts"],
      "@appcraft/types": ["libs/types/src/index.ts"],
      "@appcraft/widgets": ["libs/widgets/src/index.ts"],
      "~appcraft/*": ["apps/appcraft/src/*"],
      "~data-forge/*": ["apps/data-forge/src/*"],
      "~proxy/*": ["apps/proxy/src/*"],
      "~ts2-props/*": ["apps/ts2-props/src/*"],
      "~types/*": ["tools/types/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
